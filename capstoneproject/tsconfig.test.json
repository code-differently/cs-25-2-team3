{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "verbatimModuleSyntax": false,
    "types": ["node", "vite/client", "jest", "@testing-library/jest-dom"],
    "allowJs": true,
    "checkJs": false
